{% block html_head_container %}
    {% include 'layout/html-header.twig' %}
    {% block head %}{% endblock %}
</head>
{% endblock %}

<body class="{{body_class}}">
    {% block header %}
        <div class="loader">
            <div class="loader-inner">
                <div class="loader-wrapper wrapper-name">
                    <div class="name">
                    <img class="logo" src="../images/logo-cedclean-white.svg" alt="">
                    </div>
                </div>
            </div>
        </div> 
        <header class="header">
                <nav id="nav" class="navbar navbar-expand-md">
                    <div class="container-fluid px-0">
                        <a class="navbar-brand" href="{{site.url}}">
                           <img src="{{custom_logo_url}}" alt="CedClean"/>
                        </a>
                        <div class="btn-nav">
                            <span class="icon-nav"></span>
                        </div>						
                        {% include "layout/nav.twig" with {'items': nav.get_items} %}
                    </div>
                </nav>
        </header>
    {% endblock %}
    <div class="scroll-content" data-scroll-container>
        <div id="app">
            {% block content %}
            {% endblock %}
        </div>
            <div id="scroll-to-top">
                <a href="#hero" class="btn-to-top" data-scroll-to>
                    <i data-lucide="chevron-up"></i>
                </a>
            </div>
        {% block footer %}
                {% block contentFooter %}
                <footer class="footer" data-scroll-section>
                    {% include 'layout/footer.twig' %}
                </footer>
                {% endblock %}
                <div id="scripts">
            {{ function('wp_footer') }}
            </div
        {% endblock %} 
    </div>
</body>
</html>